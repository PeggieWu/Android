<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/videoPlay_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">


    <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="#000000">


        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView_Author"
            android:layout_width="173dp"
            android:layout_height="51dp"
            android:layout_below="@+id/ImageView"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_des"
            android:layout_width="356dp"
            android:layout_height="55dp"
            android:layout_below="@+id/textView_Author"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView_heart"
            android:layout_width="46dp"
            android:layout_height="37dp"
            android:layout_below="@+id/textView_des"
            app:srcCompat="@drawable/ic_heart" />

        <TextView
            android:id="@+id/textView_likecount"
            android:layout_width="108dp"
            android:layout_height="41dp"
            android:layout_below="@+id/textView_des"
            android:layout_toRightOf="@+id/imageView_heart"
            android:text="TextView" />


    </RelativeLayout>


</RelativeLayout>

